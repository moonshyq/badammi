@using BadammiSite.Models
@model IEnumerable<Fruit>

@{
    ViewData["Title"] = "Delete Fruit";
}

<h2>Delete Fruit</h2>

<p>Список всех фруктов:</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Composition</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var fruit in Model)
        {
            <tr>
                <td>@fruit.Id</td>
                <td>@fruit.Name</td>
                <td>@fruit.Composition</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <label for="fruitId">Введите ID фрукта для удаления:</label>
    <input type="number" id="fruitId" class="form-control" placeholder="ID" />
    <button id="deleteBtn" class="btn btn-danger mt-2">Удалить</button>
</div>

<div id="message" class="mt-2 text-success"></div>

@section Scripts {
    <script>
        document.getElementById("deleteBtn").addEventListener("click", async () => {
            const id = document.getElementById("fruitId").value;
            if (!id) {
                alert("Введите ID!");
                return;
            }

            try {
                const response = await fetch(`/Fruits/DeleteFruitJs/${id}`, {
                    method: "DELETE"
                });

                if (response.ok) {
                    window.location.href = "/Fruits/GetAllFruitsView";
                } else {
                    const text = await response.text();
                    document.getElementById("message").textContent = `Ошибка: ${text}`;
                    document.getElementById("message").classList.remove("text-success");
                    document.getElementById("message").classList.add("text-danger");
                }
            } catch (error) {
                document.getElementById("message").textContent = `Ошибка: ${error}`;
                document.getElementById("message").classList.remove("text-success");
                document.getElementById("message").classList.add("text-danger");
            }
        });
    </script>
}